<!DOCTYPE html>
<html>
	<head>
		<title><%= publisher.name %></title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
	</head>
	<body>
		<header>
			<nav class="navbar">
				<a href="/catalog">Catalog</a>
				<a href="/genre">Genres</a>
				<a href="/publisher">Publishers</a>
			</nav>
		</header>
		<h2 class="gamepage-title"><%= publisher.name %></h2>
		<h2 class="gamepage-title"><%= publisher.formatted_foundation_date %></h2>
		<div class="gamepage__top-container">
			<p class="gamepage-price"><%= gameCount %> <%= publisher.name %> games</p>
		</div>
		<a href="<%=publisher.url%>/delete">Delete publisher</a>
		<a href="<%=publisher.url%>/update">Update publisher</a>
		<% for( let index = 0; index < videogames.length; index++ ) { %>
		<div class="game-card">
			<h2 class="gamepage-title"><%= videogames[index].title %></h2>
			<div class="gamepage__top-container">
				<p class="gamepage-price"><%= videogames[index].price %>$</p>
				<p><%= videogames[index].formatted_release_date %></p>
			</div>
		</div>
		<p><%= videogames[index].description %></p>
		<% } %>
	</body>
</html>

<!-- genre: genreObj, games: gamesArr, gameCount: gamesArr.length  -->
